load(
    "@io_tweag_rules_haskell//haskell:haskell.bzl",
    "haskell_binary",
    "haskell_import",
    "haskell_library",
    "haskell_test",
)
load("@ai_formation_hazel//:hazel.bzl", "hazel_library")

haskell_packages = [
    "base",
    "aeson",
    "base64-bytestring",
    "bytestring",
    "cborg",
    "containers",
    "cryptonite",
    "hashable",
    "hedgehog",
    "http-media",
    "memory",
    "mtl",
    "natural-transformation",
    "operational",
    "serialise",
    "servant",
    "servant-client",
    "servant-server",
    "stm",
    "swagger2",
    "template-haskell",
    "text",
    "transformers",
    "recursion-schemes",
    "lens",
    "deriving-compat",
    "newtype-generics",
]

binary_packages = [
    "base",
    "warp",
]

test_packages = [
    "base",
    "containers",
    "hedgehog",
    "tasty",
    "tasty-hedgehog",
    "transformers",
    "lens",
]

[
    haskell_import(name = name)
    for name in (list(depset(haskell_packages + binary_packages + test_packages)))
]

haskell_library(
    name = "wallet-api",
    srcs = glob([
        "src/**/*.hs",
    ]),
    compiler_flags = [
        "-XExplicitForAll",
        "-XScopedTypeVariables",
        "-XDeriveGeneric",
        "-XStandaloneDeriving",
        "-XDeriveLift",
        "-XGeneralizedNewtypeDeriving",
        "-XDeriveFunctor",
        "-XDeriveFoldable",
        "-XDeriveTraversable",
    ],
    src_strip_prefix = "src",
    visibility = ["//visibility:public"],
    deps = [hazel_library(name) for name in haskell_packages] + [
        "//language-plutus-core:language-plutus-core",
        "//plutus-tx:plutus-tx",
        "//plutus-tx:plutus-tx-compiler",
    ],
)

haskell_binary(
    name = "wallet-api-emulator",
    srcs = ["emulator/Main.hs"],
    src_strip_prefix = "emulator",
    visibility = ["//visibility:public"],
    deps = [hazel_library(name) for name in binary_packages] + [
        ":wallet-api",
    ],
)

haskell_test(
    name = "wallet-api-test",
    size = "small",
    srcs = glob([
        "test/*.hs",
    ]),
    src_strip_prefix = "test",
    visibility = ["//visibility:public"],
    deps = [hazel_library(name) for name in test_packages] + [
        ":wallet-api",
        "//plutus-tx:plutus-tx",
        "//plutus-tx:plutus-tx-compiler",
    ],
)

sh_test(
    name = "hlint",
    size = "small",
    srcs = ["@hlint//:bin/run.sh"],
    args = ["."],
    deps = ["//:hlint_lib"],
    data = glob(["**/*.hs"], exclude = ["**/.stack-work/**"]),
)

sh_test(
    name = "stylish",
    size = "small",
    srcs = ["@stylish_haskell//:bin/run.sh"],
    args = ["wallet-api"],
    deps = ["//:stylish_haskell_lib"],
    data = glob(["**/*.hs"], exclude = ["**/.stack-work/**"]),
)
