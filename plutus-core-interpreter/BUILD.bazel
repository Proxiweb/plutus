load(
    "@io_tweag_rules_haskell//haskell:haskell.bzl",
    "haskell_import",
    "haskell_library",
    "haskell_test",
)
load("@ai_formation_hazel//:hazel.bzl", "hazel_library")

haskell_packages = [
    "base",
    "containers",
    "mtl",
    "mmorph",
    "lens",
]

test_packages = [
    "base",
    "hedgehog",
    "mtl",
    "tasty",
    "tasty-hedgehog",
    "tasty-hunit",
]

[
    haskell_import(name = name)
    for name in (list(depset(haskell_packages + test_packages)))
]


haskell_library(
    name = "plutus-core-interpreter",
    srcs = glob([
        "src/**/*.hs",
    ]),
    compiler_flags = [
        "-XStandaloneDeriving",
        "-XScopedTypeVariables",
        "-XFlexibleContexts",
        "-XDeriveGeneric",
        "-XStandaloneDeriving",
        "-XDeriveLift",
        "-XGeneralizedNewtypeDeriving",
        "-XDeriveFunctor",
        "-XDeriveFoldable",
        "-XDeriveTraversable",
    ],
    src_strip_prefix = "src",
    visibility = ["//visibility:public"],
    deps = [hazel_library(name) for name in haskell_packages] + [
        "//language-plutus-core:language-plutus-core",
    ],
)

haskell_test(
    name = "plutus-core-interpreter-test",
    size = "medium",
    srcs = glob([
        "test/**/*.hs",
    ]),
    compiler_flags = [
        "-XOverloadedStrings",
    ],
    src_strip_prefix = "test",
    visibility = ["//visibility:public"],
    deps = [hazel_library(name) for name in test_packages] + [
        ":plutus-core-interpreter",
        "//language-plutus-core:language-plutus-core",
    ],
)

sh_test(
    name = "hlint",
    size = "small",
    srcs = ["@hlint//:bin/run.sh"],
    args = ["."],
    deps = ["//:hlint_lib"],
    data = glob(["**/*.hs"], exclude = ["**/.stack-work/**"]),
)

sh_test(
    name = "stylish",
    size = "small",
    srcs = ["@stylish_haskell//:bin/run.sh"],
    args = ["plutus-core-interpreter"],
    deps = ["//:stylish_haskell_lib"],
    data = glob(["**/*.hs"], exclude = ["**/.stack-work/**"]),
)
